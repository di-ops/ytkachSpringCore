<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id = "consoleEventLogger" class="ytkach.spring.core.loggers.ConsoleEventLogger"/>
    <bean id = "fileEventLogger" class="ytkach.spring.core.loggers.FileEventLogger" init-method="init">
        <constructor-arg value="target/events_log.txt"/>
    </bean>
    <bean id = "cacheFileEventLogger" class="ytkach.spring.core.loggers.CacheFileEventLogger" parent="fileEventLogger" destroy-method="destroy">
        <constructor-arg value="5"/>
    </bean>
    <bean id = "combinedEventLogger" class="ytkach.spring.core.loggers.CombinedEventLogger">
        <constructor-arg>
            <list>
                <ref bean="fileEventLogger"/>
                <ref bean="consoleEventLogger"/>
            </list>
        </constructor-arg>
    </bean>
</beans>